   "source": [
    "# Imports\n",
    "import numpy as np\n",
    "from datasets import load_dataset, DatasetDict, Audio\n",
    "from transformers import (\n",
    "    WhisperProcessor, \n",
    "    WhisperFeatureExtractor, \n",
    "    WhisperTokenizer, \n",
    "    WhisperForConditionalGeneration,\n",
    "    Seq2SeqTrainingArguments, \n",
    "    Seq2SeqTrainer,\n",
    "    AutoConfig\n",
    ")\n",
    "from transformers.training_args_seq2seq import Seq2SeqTrainingArguments\n",
    "import evaluate\n",
    "import torch\n",
    "import torch.cuda.amp as amp\n",
    "import os\n",
    "import wandb\n",
    "from dataclasses import dataclass\n",
    "from typing import Any, Dict, List, Union"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Enable deterministic behavior\n",
    "def set_seed(seed=42):\n",
    "    torch.manual_seed(seed)\n",
    "    torch.cuda.manual_seed_all(seed)\n",
    "    np.random.seed(seed)\n",
    "\n",
    "set_seed()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Debug function for model precision\n",
    "def print_model_precision():\n",
    "    for name, param in model.named_parameters():\n",
    "        print(f\"Parameter {name}: dtype={param.dtype}\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Configurations\n",
    "model_name_or_path = \"openai/whisper-tiny\"\n",
    "task = \"transcribe\"\n",
    "dataset_name = \"mozilla-foundation/common_voice_11_0\"\n",
    "language = \"Urdu\"\n",
    "language_abbr = \"ur\""
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Check CUDA availability\n",
    "device = torch.device(\"cuda\" if torch.cuda.is_available() else \"cpu\")\n",
    "print(f\"Using device: {device}\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Load Dataset with error handling\n",
    "try:\n",
    "    common_voice = DatasetDict()\n",
    "    common_voice[\"train\"] = load_dataset(dataset_name, language_abbr, split=\"train+validation\", streaming=True)\n",
    "    common_voice[\"test\"] = load_dataset(dataset_name, language_abbr, split=\"test\", streaming=True)\n",
    "except Exception as e:\n",
    "    print(f\"Error loading dataset: {e}\")\n",
    "    raise"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Data validation\n",
    "def validate_audio_data(batch):\n",
    "    if len(batch[\"audio\"][\"array\"]) < 100:  # Minimum length check\n",
    "        return False\n",
    "    if np.max(np.abs(batch[\"audio\"][\"array\"])) == 0:  # Silent audio check\n",
    "        return False\n",
    "    return True\n",
    "\n",
    "# Data augmentation\n",
    "def augment_audio(batch):\n",
    "    array = batch[\"audio\"][\"array\"]\n",
    "    # Add random noise\n",
    "    noise_level = 0.005\n",
    "    noise = np.random.normal(0, noise_level, array.shape)\n",
    "    array = array + noise\n",
    "    # Random time shift\n",
    "    shift = np.random.randint(-1000, 1000)\n",
    "    array = np.roll(array, shift)\n",
    "    batch[\"audio\"][\"array\"] = array\n",
    "    return batch"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Data Cleaning and Preprocessing\n",
    "def clean_text(batch):\n",
    "    batch[\"sentence\"] = batch[\"sentence\"].strip().lower()\n",
    "    return batch\n",
    "\n",
    "common_voice = common_voice.map(clean_text)\n",
    "common_voice = common_voice.remove_columns(\n",
    "    [\"accent\", \"age\", \"client_id\", \"down_votes\", \"gender\", \"locale\", \"path\", \"segment\", \"up_votes\", \"variant\"]\n",
    ")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Initialize models with error handling\n",
    "try:\n",
    "    feature_extractor = WhisperFeatureExtractor.from_pretrained(model_name_or_path)\n",
    "    tokenizer = WhisperTokenizer.from_pretrained(model_name_or_path, language=language, task=task)\n",
    "    processor = WhisperProcessor.from_pretrained(model_name_or_path, language=language, task=task)\n",
    "except Exception as e:\n",
    "    print(f\"Error initializing models: {e}\")\n",
    "    raise"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Process Audio Column with enhanced sampling\n",
    "common_voice = common_voice.cast_column(\"audio\", Audio(sampling_rate=16000))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Enhanced Dataset Preprocessing\n",
    "def prepare_dataset(batch):\n",
    "    try:\n",
    "        if not validate_audio_data(batch):\n",
    "            return None\n",
    "            \n",
    "        batch = augment_audio(batch)\n",
    "        audio = batch[\"audio\"]\n",
    "        array = audio[\"array\"]\n",
    "        array = array / np.max(np.abs(array))\n",
    "        \n",
    "        batch[\"input_features\"] = feature_extractor(\n",
    "            array, \n",
    "            sampling_rate=audio[\"sampling_rate\"],\n",
    "            return_tensors=\"pt\"\n",
    "        ).input_features[0]\n",
    "        \n",
    "        batch[\"labels\"] = tokenizer(batch[\"sentence\"], truncation=True, max_length=128).input_ids\n",
    "        return batch\n",
    "    except Exception as e:\n",
    "        print(f\"Error in prepare_dataset: {e}\")\n",
    "        return None\n",
    "\n",
    "common_voice = common_voice.map(\n",
    "    prepare_dataset, \n",
    "    remove_columns=common_voice.column_names[\"train\"], \n",
    "    num_proc=2,\n",
    "    desc=\"Preprocessing dataset\"\n",
    ")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Enhanced Data Collator\n",
    "@dataclass\n",
    "class DataCollatorSpeechSeq2SeqWithPadding:\n",
    "    processor: Any\n",
    "    \n",
    "    def __call__(self, features: List[Dict[str, Union[List[int], torch.Tensor]]]) -> Dict[str, torch.Tensor]:\n",
    "        try:\n",
    "            input_features = [{\"input_features\": feature[\"input_features\"]} for feature in features]\n",
    "            batch = self.processor.feature_extractor.pad(input_features, return_tensors=\"pt\")\n",
    "            \n",
    "            label_features = [{\"input_ids\": feature[\"labels\"]} for feature in features]\n",
    "            labels_batch = self.processor.tokenizer.pad(label_features, return_tensors=\"pt\")\n",
    "            \n",
    "            labels = labels_batch[\"input_ids\"].masked_fill(labels_batch.attention_mask.ne(1), -100)\n",
    "            \n",
    "            if (labels[:, 0] == self.processor.tokenizer.bos_token_id).all().cpu().item():\n",
    "                labels = labels[:, 1:]\n",
    "            \n",
    "            batch[\"labels\"] = labels\n",
    "            return batch\n",
    "        except Exception as e:\n",
    "            print(f\"Error in data collator: {e}\")\n",
    "            raise\n",
    "\n",
    "data_collator = DataCollatorSpeechSeq2SeqWithPadding(processor=processor)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Enhanced Evaluation Metrics\n",
    "def compute_metrics(pred):\n",
    "    pred_ids = pred.predictions\n",
    "    label_ids = pred.label_ids\n",
    "    \n",
    "    label_ids[label_ids == -100] = tokenizer.pad_token_id\n",
    "    \n",
    "    pred_str = tokenizer.batch_decode(pred_ids, skip_special_tokens=True)\n",
    "    label_str = tokenizer.batch_decode(label_ids, skip_special_tokens=True)\n",
    "    \n",
    "    wer = metric.compute(predictions=pred_str, references=label_str)\n",
    "    return {\"wer\": wer}\n",
    "\n",
    "metric = evaluate.load(\"wer\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Model Configuration and Loading with FP16\n",
    "config = AutoConfig.from_pretrained(model_name_or_path)\n",
    "config.use_cache = False\n",
    "\n",
    "model = WhisperForConditionalGeneration.from_pretrained(\n",
    "    model_name_or_path,\n",
    "    config=config,\n",
    "    torch_dtype=torch.float16 if torch.cuda.is_available() else torch.float32\n",
    ")\n",
    "model.gradient_checkpointing_enable()\n",
    "model.to(device)\n",
    "\n",
    "if torch.cuda.is_available():\n",
    "    model = model.half()  # Convert model to FP16\n",
    "\n",
    "# Print model precision for verification\n",
    "print_model_precision()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Enhanced Training Arguments with FP16 and additional configurations\n",
    "training_args = Seq2SeqTrainingArguments(\n",
    "    output_dir=\"whisper-tiny-urdu\",\n",
    "    per_device_train_batch_size=4,\n",
    "    gradient_accumulation_steps=2,\n",
    "    learning_rate=1e-4,\n",
    "    warmup_steps=50,\n",
    "    num_train_epochs=1,\n",
    "    evaluation_strategy=\"steps\",\n",
    "    logging_strategy=\"steps\",\n",
    "    logging_steps=50,\n",
    "    eval_steps=100,\n",
    "    save_steps=100,\n",
    "    max_steps=500,\n",
    "    fp16=True,\n",
    "    fp16_opt_level=\"O2\",\n",
    "    fp16_backend=\"amp\",\n",
    "    half_precision_backend=\"amp\",\n",
    "    generation_max_length=128,\n",
    "    remove_unused_columns=False,\n",
    "    label_names=[\"labels\"],\n",
    "    save_total_limit=2,\n",
    "    load_best_model_at_end=True,\n",
    "    metric_for_best_model=\"wer\",\n",
    "    greater_is_better=False,\n",
    "    report_to=\"wandb\",\n",
    "    max_grad_norm=1.0,  # Gradient clipping\n",
    "    lr_scheduler_type=\"cosine\",  # Learning rate scheduling\n",
    "    warmup_ratio=0.1\n",
    ")"
   ]
  },
  {
